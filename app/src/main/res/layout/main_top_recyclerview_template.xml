<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/main_top_margin"
    android:layout_marginEnd="@dimen/main_top_margin"
    android:layout_marginTop="@dimen/main_top_margin"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:paddingTop="@dimen/main_text_view_top_margin"
        android:textSize="25sp"
        android:id="@+id/main_top_item_name"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:id="@+id/main_top_item_number"
        android:layout_alignParentEnd="true"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/main_top_item_number"
        android:background="@color/yellow" />

</RelativeLayout>